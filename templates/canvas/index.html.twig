{% extends 'dashboard/index.html.twig' %}

{% block title %}Hello CanvasController!{% endblock %}

{% block navbar %}
    {{ parent() }}
{% endblock navbar %}

{% block body %}

        {% block sidebar %}
            {{ parent() }}
        {% endblock %}
    {% block main %}
        <main class="page-content">
            <div class="content-navbar">
                <h4 class="bar-title"><i class="fab fa-accusoft"></i><b class="title-content">Create new</b></h4>
            </div>
            <div class="container-fluid-main">
                <div class="jumbotron-main">
                    <div class="row">
                        {%  for data in formData %}
                        <div class="col-md-2 cards">
                            <form class="canvas-cards-format" action="{{ path('draw') }}" method="post">
                                <input type="hidden" value="{{ data }}" name="format">
                                <input type="submit" value="{{ data }}">
                            </form>
                        </div>
                        {% endfor %}

                </div>
            </div>
        </main>
    {% endblock main %}
{% endblock %}
{% block footer %}
    <footer class="footer">
        Copyright
    </footer>
    </div>
{% endblock %}

{% block stylesheets %}
 {{ parent() }}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}
